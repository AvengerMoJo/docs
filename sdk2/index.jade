        i.icon-arrow-right
      a(href="javascript:document.getElementById('widget-demo').contentWindow.location.reload(true);")
        i.icon-refresh
    .browser-address
      i.icon-lock
  .browser-content(class="login-widget2")
    iframe#widget-demo(src='')

mixin fiddletize(snippet)
  div
    | Want to play around with this snippet?   
    form(action='http://jsfiddle.net/api/post/library/pure/', method='post', target="_blank", style="display: inline;")
      input(type="hidden", name="html", value=snippet)
      input.edit-fiddle(type="submit", value="Edit in JsFiddle")

